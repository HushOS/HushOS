{
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": ["DOM", "DOM.Iterable", "ES2022", "WebWorker"],
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["./app/*"],
            "@@/*": ["./*"]
        },
        "noEmit": true
    }
}
